@model IEnumerable<OutreachModule.Models.Camp>

@{
    ViewBag.Title = "Camps";
}

<h2>Camps</h2>

@Html.Partial("~/Views/Shared/SearchPartial.cshtml")
<table class="table">
    <tr>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.code).ToHtmlString(),"Index", new { sortOrder = ViewBag.CampSortParm }) @MvcHtmlString.Create(ViewBag.CampSortIcon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.location_1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.organizer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.contact_person)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(Html.DisplayFor(modelItem => item.code).ToHtmlString(), "Details", new { id = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.location_1), @Html.DisplayFor(modelItem => item.location_2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.organizer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.contact_person)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id })
            @if (User.IsInRole(OutreachModule.Controllers.OutreachRoles.RoleAdmin))
            {   
                @Html.Raw(" | ")
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                @Html.Raw(" | ")
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            }
        </td>
    </tr>
}

</table>
@section Scripts {
    @Scripts.Render("/Scripts/searchtable.js")
}
