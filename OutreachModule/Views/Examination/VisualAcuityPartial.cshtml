@model OutreachModule.Models.VisualAcuityModel

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Visual Acuity</h3>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <div class="control-label">
                Method
            </div>
            @foreach (var r in OutreachModule.Models.VisualAcuityModel.options)
            {
                <label class="radio-inline">
                    @Html.RadioButtonFor(model => model.method, r) @Html.Raw(r)
                </label>
            }
        </div>
        <div class="row">
            <div class="form-group col-md-4">
                <label class="control-label">RE</label>
                @Html.DropDownListFor(model => model.leftAcuity, Model.AcuityOptions, new { @class = "form-control" })
            </div>
            <div class="form-group col-md-4">
                <label class="control-label">LE</label>
                @Html.DropDownListFor(model => model.rightAcuity, Model.AcuityOptions, new { @class = "form-control" })
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
</div>