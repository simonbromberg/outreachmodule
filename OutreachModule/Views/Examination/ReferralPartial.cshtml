@model OutreachModule.Models.ReferralModel

<div class="panel panel-default">
    <div class="panel-heading clearfix">
        @*<div class="pull-right btn-group">
            @Html.ActionLink("Print", "PrintReferral", null, new { target = "_blank" }) TODO
        </div>*@
        <h3 class="panel-title">Patient Referral</h3>
    </div>
    <div class="panel-body">
        <div class="form-group form-inline">
            <label class="radio-inline" id="referred-yes">
                @Html.RadioButtonFor(model => model.referred, "true") Yes
            </label>
            <label class="radio-inline" id="referred-no">
                @Html.RadioButtonFor(model => model.referred, "false") No
            </label>&nbsp;&nbsp;
            @Html.EditorFor(model => model.comment, new { htmlAttributes = new { @class = "form-control", placeholder = "Comment" } })
        </div>
        <div id="referral-yes-details" style="display:@(Model.referred ? "inherit" : "none");">
            <div class="form-group">
                <label for="referral-reasons">Reason for Referral</label>
                @Html.DropDownListFor(model => model.reason, Model.ReferralReasons, new { @class = "form-control", id = "referral-reasons" })
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.reasonOther, new { htmlAttributes = new { @class = "form-control", style = "display:none;", id = "referral-reason-other", placeholder = "Specify other..." } })
            </div>
            <div class="form-group">
                <label for="referral-hospital">Referred to</label>
                <div>
                    @Html.EditorFor(model => model.hospital, new { htmlAttributes = new { @class = "form-control", id = "referral-hospital", placeholder = "Enter hospital location" } })
                </div>
            </div>
        </div>
    </div>
</div>
