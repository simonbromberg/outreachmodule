@model OutreachModule.Models.AlignmentModel

@if(Model.index == 0) {
    @Html.Raw("<table class=\"table\">");
    @Html.Raw("<tr>");
}
<td>
 
            <label for="horizontal-alignment-@Model.index">H:</label>
            @Html.DropDownListFor(m => m.horizontal, Model.HorizontalOptions, new { @class = "alignment-dropdown", id = "horizontal-alignment-" + Model.index })
<br />
            <label for="vertical-alignment-@Model.index">V:</label>
            @Html.DropDownListFor(m => m.vertical, Model.VerticalOptions, new { @class = "alignment-dropdown", id = "vertical-alignment-" + Model.index })

</td>

@if ((Model.index + 1) % 3 == 0)
{
    @Html.Raw("</tr>");
    if (Model.index != 8)
    {
    @Html.Raw("<tr>");
    }
    if (Model.index == 8)
    {
        @Html.Raw("</table>");
    }
}

@Html.HiddenFor(m => m.index)
