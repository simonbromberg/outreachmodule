<div class="row">
    <div class="col-md-8">
        @Html.ActionLink("Create New", "Create")
    </div>
    <div class="col-md-4">
        @using (Html.BeginForm(null, null, FormMethod.Get, new { @class = "form-inline" }))
        {
            <div class="form-group has-feedback">
                @Html.TextBox("SearchString", null, new { @class = "form-control", value = ViewBag.searchString, id = "searchBox" })
                <span class="glyphicon glyphicon-search form-control-feedback"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Search" class="btn btn-default" id="searchButton">Search</button>
            </div>
        }
    </div>
</div><br />
